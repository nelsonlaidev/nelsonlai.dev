{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "error",
    "perf": "error",
    "style": "error",
    "restriction": "error",
    "nursery": "error"
  },
  "plugins": [
    "eslint",
    "import",
    "jsdoc",
    "jsx-a11y",
    "nextjs",
    "node",
    "oxc",
    "promise",
    "react",
    "react-perf",
    "typescript",
    "unicorn",
    "vitest"
  ],
  "env": {
    "builtin": true
  },
  "settings": {
    "jsx-a11y": {
      "components": {
        "Button": "button",
        "Image": "img",
        "Input": "input",
        "Textarea": "textarea",
        "Link": "a",
        "Label": "label",
        "FieldLabel": "label"
      }
    }
  },
  "rules": {
    // Allow long files
    "max-lines": "off",
    // Allow many lines in functions
    "max-lines-per-function": "off",
    // Allow many statements in functions
    "max-statements": "off",
    // Allow ternary expressions
    "no-ternary": "off",
    // Allow continue statements
    "no-continue": "off",
    // Allow variables without initialization
    "init-declarations": "off",
    // Unnecessary in TypeScript
    "no-undef": "off",
    "no-undefined": "off",
    // Allow control statements without curly braces
    "curly": "off",
    // Allow short variable names
    "id-length": "off",
    // Allow inline comments
    "no-inline-comments": "off",
    // Allow functions with many parameters
    "max-params": "off",
    // Allow magic numbers
    "no-magic-numbers": "off",
    // Handled by other plugins
    "sort-keys": "off",
    "sort-imports": "off",
    // Handled by TSESLint
    "require-await": "off",
    "func-style": ["error", "declaration"],
    "new-cap": ["error", { "capIsNew": false }],
    "capitalized-comments": [
      "error",
      "always",
      {
        "ignorePattern": "i18n-check",
        "ignoreConsecutiveComments": true
      }
    ],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "prefer-destructuring": [
      "error",
      {
        "VariableDeclarator": {
          "array": false,
          "object": true
        },
        "AssignmentExpression": {
          "array": false,
          "object": false
        }
      }
    ],
    "no-duplicate-imports": ["error", { "allowSeparateTypeImports": true }],
    "no-void": ["error", { "allowAsStatement": true }],

    // Prefer vitest/prefer-called-times
    "vitest/prefer-called-once": "off",

    // Since we are using React 17+, we don't need React to be in scope
    "react/react-in-jsx-scope": "off",
    // Arbitrary
    "react/jsx-max-depth": "off",
    "react/only-export-components": "off",
    // Allow spreading props
    "react/jsx-props-no-spreading": "off",
    // Unnecessary since we are using TypeScript
    "react/jsx-filename-extension": "off",
    // Allow multiple components per file
    "react/no-multi-comp": "off",
    // Allow using array as index key
    "react/no-array-index-key": "off",

    // Since we are using TypeScript, we don't need JSDoc comments for type annotations
    "jsdoc/require-param-type": "off",
    "jsdoc/require-returns-type": "off",

    // Allow default exports
    "import/no-default-export": "off",
    // Allow named exports
    "import/no-named-export": "off",
    // Allow multiple export declarations
    "import/group-exports": "off",
    // Allow exporting anywhere
    "import/exports-last": "off",
    // Allow importing any number of dependencies
    "import/max-dependencies": "off",
    // Allow using Node.js modules in server components
    "import/no-nodejs-modules": "off",
    // Allow both default and named exports
    "import/prefer-default-export": "off",
    "import/no-unassigned-import": [
      "error",
      {
        "allow": ["server-only", "client-only", "@testing-library/jest-dom/vitest", "**/*.css"]
      }
    ],
    "import/no-namespace": ["error", { "ignore": ["zod", "schemas"] }],

    "jest/consistent-test-it": ["error", { "fn": "test" }],
    "jest/max-expects": ["error", { "max": 10 }],

    // Doesn't seem to work with vitest
    "jest/no-untyped-mock-factory": "off",
    "jest/valid-title": "off",

    // Unnecessary in modern Javascript
    "oxc/no-optional-chaining": "off",
    "oxc/no-async-await": "off",
    "oxc/no-rest-spread-properties": "off",
    // Allow spreading in maps
    "oxc/no-map-spread": "off",

    // Too restrictive
    "jsx-a11y/anchor-ambiguous-text": "off",

    "typescript/array-type": [
      "error",
      {
        "default": "array-simple",
        "readonly": "array-simple"
      }
    ],
    "typescript/consistent-type-definitions": ["error", "type"],
    // ======================================================================
    "typescript/strict-boolean-expressions": "off", // To be enabled in the final
    // ======================================================================

    // TODO: Re-enable these rules and fix the issues,
    "jest/require-hook": "off",

    "react-perf/jsx-no-new-object-as-prop": "off",
    "react-perf/jsx-no-new-function-as-prop": "off",
    "react-perf/jsx-no-jsx-as-prop": "off",
    "react-perf/jsx-no-new-array-as-prop": "off",

    "typescript/no-unsafe-return": "off",
    "typescript/no-unsafe-assignment": "off",
    "typescript/no-unsafe-member-access": "off",
    "typescript/no-misused-promises": "off",
    "typescript/no-non-null-assertion": "off",
    "typescript/explicit-function-return-type": "off",
    "typescript/explicit-module-boundary-types": "off",
    "typescript/no-import-type-side-effects": "off",
    "typescript/no-floating-promises": "off",
    "typescript/no-unsafe-type-assertion": "off",

    "unicorn/no-null": "off",
    "unicorn/no-document-cookie": "off",
    "unicorn/no-typeof-undefined": "off",

    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "next/navigation",
            "importNames": ["usePathname", "useRouter", "redirect", "permanentRedirect"],
            "message": "Please use `@/i18n/routing` instead."
          },
          {
            "name": "next/link",
            "importNames": ["default"],
            "message": "Please use `@/components/ui/link` instead."
          }
        ]
      }
    ]
  }
}
