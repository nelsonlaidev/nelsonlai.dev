{
  "name": "@repo/ui",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "exports": {
    "./components/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./utils/*": "./src/utils/*.ts",
    "./styles/*.css": "./src/styles/*.css"
  },
  "scripts": {
    "clean": "rm -rf .turbo",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,mts,tsx}": "eslint --fix",
    "*": [
      "prettier --write --ignore-unknown",
      "cspell --no-progress --no-summary --no-must-find-files --unique"
    ]
  },
  "dependencies": {
    "@ark-ui/react": "catalog:prod",
    "@icons-pack/react-simple-icons": "catalog:prod",
    "@repo/i18n": "workspace:*",
    "clsx": "catalog:prod",
    "cmdk": "catalog:prod",
    "cva": "catalog:prod",
    "lucide-react": "catalog:prod",
    "merge-refs": "catalog:prod",
    "next-themes": "catalog:prod",
    "radix-ui": "catalog:prod",
    "react-hook-form": "catalog:prod",
    "react-textarea-autosize": "catalog:prod",
    "sonner": "catalog:prod",
    "tailwind-merge": "catalog:prod",
    "vaul": "catalog:prod"
  },
  "devDependencies": {
    "@nelsonlaidev/eslint-config": "catalog:lint",
    "@nelsonlaidev/typescript-config": "catalog:dev",
    "@tailwindcss/typography": "catalog:dev",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "next": "catalog:next",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "tailwindcss": "catalog:dev",
    "tw-animate-css": "catalog:dev"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  }
}
