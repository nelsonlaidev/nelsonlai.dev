{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/.source": ["./.source/index.ts"],
      "~/*": ["./public/*"]
    }
  },
  "extends": "@nelsonlaidev/typescript-config/nextjs.json",
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts", ".next/dev/types/**/*.ts"]
}
