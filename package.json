{
  "name": "nelsonlai-dev",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:apps": "turbo build --filter=./apps/*",
    "build:mdx": "turbo build:mdx",
    "check": "turbo lint && turbo type-check && bun format:check && bun check:spelling && bun check:knip",
    "check:i18n": "i18n-check -s en -l packages/i18n/src/messages -u apps/web/src -f next-intl",
    "check:knip": "bun with-env knip",
    "check:spelling": "cspell --no-progress --no-summary --no-must-find-files --unique",
    "clean": "turbo clean && rm -rf .turbo coverage",
    "db:check": "turbo db:check",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "db:reset": "turbo db:reset",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "dev": "turbo dev",
    "dev:docs": "turbo dev --filter=./apps/docs",
    "dev:packages": "turbo dev --filter=./packages/*",
    "dev:web": "turbo dev --filter=@repo/web",
    "format:check": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "format:write": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "lint": "turbo lint && eslint . --max-warnings 0",
    "lint:fix": "turbo lint:fix && eslint --fix .",
    "prepare": "husky",
    "test:e2e": "turbo test:e2e",
    "test:e2e:inspector": "turbo test:e2e:inspector",
    "test:e2e:install": "playwright install",
    "test:e2e:ui": "turbo test:e2e:ui",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest watch",
    "type-check": "turbo type-check",
    "typegen": "turbo typegen",
    "with-env": "dotenvx run -f .env.local --ignore=MISSING_ENV_FILE --"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.*": [
      "prettier --write --ignore-unknown",
      "bun check:spelling"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cspell/dict-redis": "^1.0.7",
    "@dotenvx/dotenvx": "^1.51.0",
    "@lingual/i18n-check": "^0.8.11",
    "@nelsonlaidev/eslint-config": "^2.1.1",
    "@nelsonlaidev/prettier-config": "^0.1.0",
    "@nelsonlaidev/typescript-config": "^0.0.3",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "cspell": "^9.2.1",
    "czg": "^1.12.0",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "knip": "^5.63.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.2.23",
  "engines": {
    "node": ">=22"
  }
}
