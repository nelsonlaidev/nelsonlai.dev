{
  "name": "nelsonlai-dev",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:apps": "turbo build --filter=./apps/*",
    "build:mdx": "turbo build:mdx",
    "check": "pnpm lint && pnpm typecheck && pnpm format:check && pnpm knip && pnpm check:i18n",
    "check:i18n": "i18n-check -s en -l packages/i18n/src/messages -u apps/web/src -f next-intl",
    "clean": "turbo clean && rm -rf .turbo coverage",
    "db:check": "turbo db:check",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "db:reset": "turbo db:reset",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "dev": "turbo dev",
    "dev:docs": "turbo dev --filter=./apps/docs",
    "dev:packages": "turbo dev --filter=./packages/*",
    "dev:web": "turbo dev --filter=@repo/web",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preinstall": "npx --yes only-allow pnpm",
    "knip": "pnpm with-env knip",
    "lint": "turbo lint && eslint . --max-warnings 0",
    "lint:fix": "turbo lint:fix && eslint --fix .",
    "prepare": "lefthook install",
    "test:e2e": "turbo test:e2e",
    "test:e2e:inspector": "turbo test:e2e:inspector",
    "test:e2e:install": "playwright install",
    "test:e2e:ui": "turbo test:e2e:ui",
    "test:unit": "pnpm with-env vitest run",
    "test:unit:coverage": "pnpm with-env vitest run --coverage",
    "test:unit:ui": "pnpm with-env vitest --ui",
    "test:unit:watch": "pnpm with-env vitest watch",
    "typecheck": "turbo typecheck",
    "typegen": "turbo typegen",
    "with-env": "dotenvx run -f .env.local --ignore=MISSING_ENV_FILE --"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,d.ts,d.cjs,d.mts}": "eslint --fix",
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "1.51.2",
    "@lingual/i18n-check": "0.8.16",
    "@nelsonlaidev/eslint-config": "2.4.5",
    "@nelsonlaidev/prettier-config": "0.1.1",
    "@nelsonlaidev/typescript-config": "1.1.1",
    "@playwright/test": "1.57.0",
    "@types/node": "22.19.3",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "cross-env": "10.1.0",
    "eslint": "9.39.2",
    "jsdom": "27.3.0",
    "knip": "5.76.0",
    "lefthook": "2.0.12",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-packagejson": "2.5.20",
    "tsx": "4.21.0",
    "turbo": "2.7.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=22"
  }
}
